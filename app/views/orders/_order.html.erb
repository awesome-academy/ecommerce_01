<tr>
  <td><strong><%= link_to order.id, order_path(order) %></strong></td>
  <td><strong><%= order.created_at %></strong></td>
  <td><strong><%= order.order_name %></strong></td>
  <td><strong><%= number_to_currency order.order_items.sum(:price) %></strong></td>
  <td><strong><%= order.status %></strong></td>
  <% if can? :destroy, order %>
    <td><%=  link_to_if order.accepted?, t(".cancel"), order, method: :put, remote: true, "data-confirm": t(".cancel_confirmation"), class: "btn btn-danger" %></td>
  <% end %>
</tr>
