<div class="row justify-content-center custom-width">
  <div class="card">
    <h5 class="card-header info-color text-white text-center py-4 bg-dark">
      <strong><%= t ".head_content" %></strong>
    </h5>
      <!--Card content-->
    <div class="card-body px-lg-5 pt-0">
      <!-- Form -->
      <%= form_for :order_info, url: checkout_orders_path, class: "text-center" do |f|  %>
        <div class="mt-3 row">
          <div class="col-md-2">
              <%= f.label :order_name %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :order_name, placeholder: t(".placeholder_order_name"), class: "form-control", required: true %>
          </div>
        </div>
        <div class="mt-3 row">
          <div class="col-md-2">
            <%= f.label :order_phone %>
          </div>
          <div class="col-md-10">
            <%= f.text_field :order_phone, placeholder: t(".placeholder_order_phone"), class: "form-control", required: true %>
          </div>
        </div>
        <div class="mt-3 row">
          <div class="col-md-2">
            <%= f.label :order_address %>
          </div>
          <div class="col-md-10">
            <%= f.text_area :order_address, placeholder: t(".placeholder_order_address"), class: "form-control", required: true %>
          </div>
        </div>
        <!-- button -->
        <div class="row">
          <div class="col-md-3 offset-md-2">
            <%= link_to cart_path do %>
              <button class="btn btn-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="button"><%= t ".back_to_cart" %></button>
            <% end %>
          </div>
          <div class="col-md-3 offset-md-2">
            <%= f.submit t(".next"), class: "btn btn-danger btn-rounded btn-block z-depth-0 my-4 waves-effect" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
