<%= f.fields_for :order_items, @order.order_items do |order_item| %>
<div class="row mt-3">
  <div class="col-md-6">
    <% load_product_details(products, cart_item["product_id"].to_i)%>
    <%= order_item.hidden_field :product_id, value: @product.id %>
    <%= text_field_tag :product_name, @product.name, disabled: true %>
  </div>
  <div class="col-md-1 text-center">x</div>
  <div class="col-md-2">
    <%= order_item.hidden_field :quantity, value: cart_item["quantity"] %>
    <%= text_field_tag :quantity, cart_item["quantity"], disabled: true %>
  </div>
  <div class="col-md-3">
    <%= order_item.hidden_field :price, value: @product.price %>
    <%= text_field_tag :price, number_to_currency(@product.price), disabled: true %>
    <%= order_item.hidden_field :corlor, value: @product.color %>
  </div>
</div>
<% end %>
