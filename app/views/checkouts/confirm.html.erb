<div class="row w-100 justify-content-center">
  <!-- Form -->
  <%= form_for :order, url: checkouts_path, class: "text-center" do |f|  %>
  <!--Card order info-->
    <div class="row w-100">
      <div class="card w-100">
        <h5 class="card-header info-color text-white text-center py-4 bg-dark">
          <strong><%= t ".billing" %></strong>
        </h5>
        <div class="card-body px-lg-5 pt-0">
          <div class="row mt-3">
            <div class="col-md-2">
              <%= f.label :order_name %>
            </div>
            <div class="col-md-10">
              <%= f.text_field :order_name, value: @order_info["order_name"], class: "form-control", disabled: true %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-2">
              <%= f.label :order_phone %>
            </div>
            <div class="col-md-10">
              <%= f.text_field :order_phone, value: @order_info["order_phone"], class: "form-control", disabled: true %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-2">
              <%= f.label :order_address %>
            </div>
            <div class="col-md-10">
              <%= f.text_area :order_address, value: @order_info["order_address"], class: "form-control", disabled: true %>
            </div>
          </div>
        </div>
      </div>
      <!--Card cart overview-->
      <div class="card w-100">
        <h5 class="card-header info-color text-black text-center py-4 bg-custom">
          <strong><%= t ".cart_overview" %></strong>
        </h5>
        <div class="card-body px-lg-5 pt-0">
          <%= render partial: "cart_item", collection: @cart_items, as: :cart_item, locals: {products: @products_in_cart} %>
        </div>
        <div class="card-body px-lg-5 pt-0">
          <div class="row">
            <div class="col-md-2 offset-md-7 text-center">Total:</div>
            <div class="col-md-3 text-right"><%= number_to_currency show_total_in_cart(@products_in_cart, @cart_items) %></div>
          </div>
        </div>
      </div>
    </div>
    <!-- button -->
    <div class="row">
      <div class="col-md-3 offset-md-2">
        <%= link_to new_checkout_path do %>
        <button class="btn btn-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="button"><%= t ".edit_billing" %></button>
        <% end %>
      </div>
      <div class="col-md-3 offset-md-2">
        <%= f.submit t(".finish_checkout"), class: "btn btn-danger btn-rounded btn-block z-depth-0 my-4 waves-effect" %>
      </div>
    </div>
  <% end %>
</div>
