<div class="container mt-5 password-reset">
  <div class="row justify-content-center">
    <div class="col-md-6 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="text-center">
            <h3><i class="fa fa-lock fa-4x"></i></h3>
            <h2 class="text-center"><%= t ".heading" %></h2>
            <p><%= t ".heading_content" %></p>
            <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form") do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="far fa-envelope text-primary envelope"></i></span>
                    <%= f.email_field :email, autofocus: true, placeholder: t(".placeholder_email"), autocomplete: "email", class: "form-control" %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
