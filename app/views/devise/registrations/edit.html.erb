<h2><%= t ".header", name: resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, t(".label_name") %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, t(".label_email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone, t(".label_phone") %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :address, t(".label_address") %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t ".notify_waiting_confirmation", email: resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t(".label_password") %> <i><%= t ".note_password" %></i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t ".minimum_length", min_length: @minimum_password_length %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(".label_password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t(".label_current_password") %> <i><%= t ".note_current_password" %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t(".title_submit") %>
  </div>
<% end %>

<h3><%= t ".heading_cancel_account" %></h3>

<p><%= t ".cancel_content" %> <%= button_to t(".title_btn"), registration_path(resource_name), data: { confirm: t(".data_confirm") }, method: :delete %></p>

<%= link_to t(".title_link_back"), :back %>
